# 🌟 AI星座网站环境变量配置模板
# 复制此文件为 .env 并填入实际值

# ================================
# 🚀 应用基础配置
# ================================
# 应用环境
NODE_ENV=development
PORT=3001

# 服务配置
GATEWAY_PORT=3001
HOROSCOPE_SERVICE_PORT=3002
ZODIAC_SERVICE_PORT=3003
COMPATIBILITY_SERVICE_PORT=3004
AI_SERVICE_PORT=3005

# ================================
# 🤖 AI服务配置 (ModelScope)
# ================================
# ModelScope API配置
MODELSCOPE_API_KEY=your_modelscope_api_key_here
MODELSCOPE_MODEL=Qwen/Qwen3-235B-A22B-Instruct-2507

# AI分析配置
AI_ANALYSIS_ENABLED=true
AI_TIMEOUT=15000

# ================================
# 🌐 星座服务配置
# ================================
# 星座数据源配置
HOROSCOPE_DATA_SOURCE=internal
HOROSCOPE_API_KEY=optional_external_api_key

# 运势更新频率 (小时)
HOROSCOPE_UPDATE_INTERVAL=24

# ================================
# 🐲 生肖服务配置
# ================================
# 生肖数据配置
ZODIAC_DATA_SOURCE=internal
ZODIAC_API_KEY=optional_external_api_key

# ================================
# 💕 配对服务配置
# ================================
# 配对算法配置
COMPATIBILITY_ALGORITHM=v1.0
COMPATIBILITY_SCORE_THRESHOLD=70

# ================================
# 🗄️ 数据库配置 (可选)
# ================================
# MongoDB配置 (可选)
MONGODB_URI=mongodb://localhost:27017/ai_xingzuo
MONGODB_USERNAME=optional
MONGODB_PASSWORD=optional

# Redis配置 (缓存，可选)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=optional

# ================================
# 🔐 安全配置
# ================================
# JWT密钥
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRES_IN=24h

# CORS配置
CORS_ORIGIN=http://localhost:3000,http://localhost:3001
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# ================================
# 📊 监控和日志
# ================================
# 日志级别
LOG_LEVEL=info

# 监控配置
ENABLE_METRICS=true
METRICS_PORT=9090

# 健康检查配置
HEALTH_CHECK_ENABLED=true

# ================================
# 🚢 部署配置
# ================================
# 部署环境
DEPLOYMENT_ENV=development

# 服务注册配置
SERVICE_REGISTRY_URL=http://localhost:8500
SERVICE_NAME=ai-horoscope-gateway

# 负载均衡配置
LOAD_BALANCE_STRATEGY=round_robin

# ================================
# 🌍 国际化配置
# ================================
# 默认语言
DEFAULT_LANGUAGE=zh-CN
SUPPORTED_LANGUAGES=zh-CN,en,ja,ko

# 时区配置
TIMEZONE=Asia/Shanghai

# ================================
# 📱 前端配置
# ================================
# 前端URL (用于CORS和重定向)
FRONTEND_URL=http://localhost:3000
PUBLIC_URL=http://localhost:3000

# API版本
API_VERSION=v1

# ================================
# 🔄 微服务通信配置
# ================================
# 服务间通信
SERVICE_COMMUNICATION=http
SERVICE_TIMEOUT=10000

# 服务发现配置
SERVICE_DISCOVERY_ENABLED=false
CONSUL_ENABLED=false

# 健康检查端点
HOROSCOPE_SERVICE_HEALTH=http://localhost:3002/health
ZODIAC_SERVICE_HEALTH=http://localhost:3003/health
COMPATIBILITY_SERVICE_HEALTH=http://localhost:3004/health
AI_SERVICE_HEALTH=http://localhost:3005/health

# ================================
# 💡 提示
# ================================
# 1. 生产环境请使用强密码和密钥
# 2. 敏感信息不要提交到版本控制
# 3. 根据实际需求调整配置值
# 4. 部署时通过平台环境变量设置覆盖本地配置